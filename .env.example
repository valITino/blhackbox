# =============================================================================
# Blhackbox Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit your .env file to version control.

# --- HexStrike Configuration ---
HEXSTRIKE_URL=http://hexstrike:8888
HEXSTRIKE_TIMEOUT=120
HEXSTRIKE_MAX_RETRIES=3

# --- Neo4j Configuration ---
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
# REQUIRED: Set a strong, unique password (min 8 characters). Do NOT use a default value.
NEO4J_PASSWORD=

# --- LLM Configuration (at least one required for Phase 3) ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3

# --- LLM Provider Priority (comma-separated) ---
LLM_PROVIDER_PRIORITY=openai,anthropic,ollama

# --- Orchestrator ---
MAX_ITERATIONS=10

# --- General ---
LOG_LEVEL=INFO
RESULTS_DIR=./results
WORDLISTS_DIR=./wordlists
