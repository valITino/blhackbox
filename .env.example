# =============================================================================
# Blhackbox v2.0 Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit your .env file to version control.

# --- HexStrike Configuration ---
HEXSTRIKE_URL=http://blhackbox-hexstrike:8888
HEXSTRIKE_TIMEOUT=120
HEXSTRIKE_MAX_RETRIES=3

# --- Neo4j Configuration ---
# For local Docker instance:
#   NEO4J_URI=bolt://blhackbox-neo4j:7687
# For Neo4j Aura (cloud):
#   NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_URI=bolt://blhackbox-neo4j:7687
NEO4J_USER=neo4j
# REQUIRED: Set a strong, unique password (min 8 characters). Do NOT use a default value.
NEO4J_PASSWORD=
NEO4J_DATABASE=neo4j

# --- Neo4j Aura (optional, for cloud instances) ---
AURA_INSTANCEID=
AURA_INSTANCENAME=Blhackbox

# --- LLM Configuration ---
# OpenAI and Anthropic are optional (used by --ai orchestrator mode).
# Ollama is required for the aggregator preprocessing pipeline.
OPENAI_API_KEY=
OPENAI_MODEL=o3
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-opus-4-20250514
OLLAMA_URL=http://blhackbox-ollama:11434
OLLAMA_MODEL=llama3.3

# --- LLM Provider Priority (comma-separated, for --ai mode) ---
LLM_PROVIDER_PRIORITY=openai,anthropic,ollama

# --- Orchestrator ---
MAX_ITERATIONS=10

# --- MCP Gateway ---
MCP_GATEWAY_PORT=8080

# --- General ---
LOG_LEVEL=INFO
RESULTS_DIR=./results
WORDLISTS_DIR=./wordlists
